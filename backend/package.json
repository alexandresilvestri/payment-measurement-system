{
  "name": "conf-backend",
  "version": "1.0.0",
  "description": "Payment Measurement System - Backend API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:migrate": "npm run migrate:latest && npm run dev",
    "build": "tsc",
    "start": "node dist/index.js",
    "prepare": "cd .. && git config core.hooksPath backend/.husky 2>/dev/null || true",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "db:reset": "npm run migrate:rollback:all && npm run migrate:latest && npm run seed:run",
    "db:create-test": "node -e \"const { Client } = require('pg'); const client = new Client({ host: process.env.DB_HOST || 'localhost', port: process.env.DB_PORT || 5432, user: process.env.DB_USER || 'postgres', password: process.env.DB_PASSWORD || 'postgres', database: 'postgres' }); client.connect().then(() => client.query('CREATE DATABASE conf_test').catch(() => console.log('Database conf_test already exists'))).then(() => client.end()).catch(console.error);\"",
    "db:test:setup": "npm run db:create-test && NODE_ENV=test npm run migrate:test:latest",
    "db:test:reset": "NODE_ENV=test npm run migrate:test:rollback:all && npm run migrate:test:latest",
    "migrate:make": "tsx node_modules/knex/bin/cli.js migrate:make --knexfile src/database/knexfile.ts -x ts",
    "migrate:latest": "tsx node_modules/knex/bin/cli.js migrate:latest --knexfile src/database/knexfile.ts",
    "migrate:production": "node node_modules/knex/bin/cli.js migrate:latest --knexfile dist/database/knexfile.js",
    "migrate:rollback": "tsx node_modules/knex/bin/cli.js migrate:rollback --knexfile src/database/knexfile.ts",
    "migrate:rollback:all": "tsx node_modules/knex/bin/cli.js migrate:rollback --all --knexfile src/database/knexfile.ts",
    "migrate:status": "tsx node_modules/knex/bin/cli.js migrate:status --knexfile src/database/knexfile.ts",
    "migrate:test:latest": "NODE_ENV=test tsx node_modules/knex/bin/cli.js migrate:latest --knexfile src/database/knexfile.ts",
    "migrate:test:rollback": "NODE_ENV=test tsx node_modules/knex/bin/cli.js migrate:rollback --knexfile src/database/knexfile.ts",
    "migrate:test:rollback:all": "NODE_ENV=test tsx node_modules/knex/bin/cli.js migrate:rollback --all --knexfile src/database/knexfile.ts",
    "seed:make": "tsx node_modules/knex/bin/cli.js seed:make --knexfile src/database/knexfile.ts -x ts",
    "seed:run": "tsx node_modules/knex/bin/cli.js seed:run --knexfile src/database/knexfile.ts",
    "seed:run:production": "NODE_ENV=production tsx node_modules/knex/bin/cli.js seed:run --knexfile src/database/knexfile.ts"
  },
  "lint-staged": {
    "*.ts": [
      "node_modules/.bin/eslint --fix",
      "node_modules/.bin/prettier --write"
    ],
    "*.{json,md}": [
      "node_modules/.bin/prettier --write"
    ]
  },
  "keywords": [
    "construction",
    "erp",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "tsx": "^4.7.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/knex": "^0.15.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.26",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^4.0.15",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  }
}
